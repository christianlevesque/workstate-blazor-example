<div class="navbar navbar-dark bg-dark flex-column fixed-top">
	<div class="container-fluid">
		<NavLink class="navbar-brand"
		         href="/">
			Wikipedia Search App
		</NavLink>
		<button class="navbar-toggler"
		        title="Navigation menu"
		        @onclick="ToggleNavMenu">
			<i class="fas fa-@NavTogglerClass"></i>
		</button>
	</div>

	<div class="@NavMenuCssClass"
         @onclick="ToggleNavMenu">
        <nav class="flex-column">
            <MainMenuLink Icon="home"
                          Link="/">
                Home
            </MainMenuLink>
            <MainMenuLink Icon="search"
                          Link="/search">
                Search
            </MainMenuLink>
        </nav>
    </div>
</div>

@code {
	private bool _open = false;

	private string NavMenuCssClass => _open
		? "align-self-end"
		: "collapse";

	private string NavTogglerClass => _open
		? "times"
		: "bars";

	private void ToggleNavMenu()
	{
		_open = !_open;
	}
}